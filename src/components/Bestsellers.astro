---
import products from '../data/products.json';

// ВАЖНО: Порядок имеет значение.
// 1-й ID будет Большим Хитом (слева).
// 2-й и 3-й будут справа.
const bestsellersIds = ['nut-mix', 'honey-acacia', 'honey-raspberry'];

const items = products.filter(p => bestsellersIds.includes(p.id));
// Сортируем их в том порядке, в котором они указаны в массиве bestsellersIds
const sortedItems = bestsellersIds.map(id => items.find(p => p.id === id)).filter(Boolean);

const mainProduct = sortedItems[0];
const sideProducts = sortedItems.slice(1, 3);
---

<section class="py-24 bg-[#0f0f0f] relative overflow-hidden">
    
    <div class="container mx-auto px-6">
        
        <!-- Заголовок -->
        <div class="flex flex-col md:flex-row items-start md:items-end justify-between gap-4 md:gap-6 mb-12">
            <div>
                <span class="text-brand-yellow font-bold tracking-[0.2em] uppercase text-sm block mb-1">Коллекция</span>
                <h2 class="text-3xl md:text-5xl font-heading font-bold text-white uppercase leading-tight">
                    Избранное
                </h2>
            </div>
            
            <a href="/catalog" class="text-gray-400 hover:text-white text-sm font-bold uppercase tracking-wider border-b border-white/20 hover:border-brand-yellow transition-colors pb-1 flex items-center gap-2 group">
                Смотреть всё
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:translate-x-1 transition-transform">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                </svg>
            </a>
        </div>

        <!-- АСИММЕТРИЧНАЯ СЕТКА -->
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
            
            <!-- 1. ГЛАВНЫЙ БАННЕР (Занимает 3 колонки из 5) -->
            <a href={`/product/${mainProduct.id}`} class="lg:col-span-3 group relative bg-[#1A1A1A] rounded-3xl overflow-hidden border border-white/5 hover:border-brand-yellow/30 transition-all duration-500">
                
                {/* Фоновое пятно */}
                <div class="absolute top-1/2 right-0 w-[400px] h-[400px] bg-brand-yellow/5 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/3 group-hover:bg-brand-yellow/10 transition-colors duration-500"></div>

                <div class="flex flex-col md:flex-row items-center h-full p-8 md:p-12 gap-8">
                    
                    {/* Текст */}
                    <div class="flex-1 relative z-10 flex flex-col items-start text-left">
                        <span class="bg-brand-yellow text-brand-dark px-3 py-1 rounded text-xs font-bold uppercase tracking-wider mb-4 shadow-lg">
                            Хит сезона
                        </span>
                        
                        <h3 class="text-3xl md:text-4xl font-heading font-bold text-white uppercase mb-4 leading-none group-hover:text-brand-yellow transition-colors">
                            {mainProduct.name}
                        </h3>
                        
                        <p class="text-gray-400 text-sm md:text-base line-clamp-3 mb-8 leading-relaxed">
                            {mainProduct.description}
                        </p>

                        <div class="mt-auto flex items-center gap-6">
                             <div class="text-3xl font-bold text-white">{mainProduct.variants[0].price} BYN</div>
                             <span class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center text-white group-hover:bg-brand-yellow group-hover:text-black group-hover:border-transparent transition-all">
                                ↗
                             </span>
                        </div>
                    </div>

                    {/* Картинка */}
                    <div class="flex-1 w-full flex justify-center relative z-10">
                         <img 
                            src={mainProduct.image} 
                            alt={mainProduct.name}
                            style={`view-transition-name: image-${mainProduct.id}`}
                            class="w-full max-w-[280px] object-contain drop-shadow-2xl transition-transform duration-700 group-hover:scale-110 group-hover:rotate-3"
                        />
                    </div>
                </div>
            </a>

            <!-- 2. БОКОВАЯ КОЛОНКА (Занимает 2 колонки из 5) -->
            <div class="lg:col-span-2 flex flex-col gap-6">
                
                {sideProducts.map((product) => (
                    <a href={`/product/${product.id}`} class="flex-1 group relative bg-[#1A1A1A] rounded-3xl overflow-hidden border border-white/5 hover:border-brand-yellow/30 transition-all duration-300 flex items-center p-6 gap-6">
                        
                        {/* Картинка слева */}
                        <div class="w-24 h-24 shrink-0 bg-white/5 rounded-2xl p-2 flex items-center justify-center">
                            <img 
                                src={product.image} 
                                alt={product.name}
                                style={`view-transition-name: image-${product.id}`} 
                                class="w-full h-full object-contain drop-shadow-lg transition-transform duration-500 group-hover:scale-110"
                            />
                        </div>

                        {/* Инфо справа */}
                        <div class="flex flex-col items-start">
                            <h3 class="text-xl font-heading font-bold text-white uppercase mb-2 group-hover:text-brand-yellow transition-colors leading-none">
                                {product.name}
                            </h3>
                            <div class="text-brand-yellow font-bold text-lg mb-2">
                                {product.variants[0].price} BYN
                            </div>
                            <span class="text-xs text-gray-500 uppercase font-bold tracking-widest border-b border-transparent group-hover:border-gray-500 transition-colors">
                                Подробнее
                            </span>
                        </div>

                    </a>
                ))}

            </div>

        </div>
    </div>
</section>