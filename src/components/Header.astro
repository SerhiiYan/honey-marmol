---
import CartWidget from './CartWidget.jsx';
---

<header class="fixed top-0 w-full z-50 bg-[#1A1A1A]/90 backdrop-blur-md border-b border-white/5 transition-all duration-300" id="main-header">
    <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
        
        <!-- 1. ЛОГОТИП -->
        <a href="/" class="flex flex-col leading-none uppercase font-heading font-bold text-xl tracking-tighter hover:opacity-80 transition relative z-50">
            Marmol
            <span class="text-brand-yellow text-xs">Honey</span>
        </a>

        <!-- 2. МЕНЮ (Десктоп) -->
        <nav class="hidden md:flex gap-8 text-sm font-bold tracking-widest text-gray-300 uppercase">
            <a href="/" class="hover:text-brand-yellow transition-colors">Главная</a>
            <a href="/catalog" class="hover:text-brand-yellow transition-colors">Наш мёд</a>
            <a href="/delivery" class="hover:text-brand-yellow transition-colors">Доставка</a>
            <a href="/about" class="hover:text-brand-yellow transition-colors">О нас</a>
        </nav>

        <!-- 3. ПРАВАЯ ЧАСТЬ -->
        <div class="flex items-center gap-4 relative z-50">
            
            <!-- Корзина -->
            <CartWidget client:only="react" />

            <!-- КНОПКА БУРГЕР -->
            <button id="menu-btn" class="block md:hidden text-white focus:outline-none p-2 relative z-50">
                <!-- Иконка гамбургера -->
                <svg id="icon-menu" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 transition-transform duration-300">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                </svg>
                <!-- Иконка закрытия (скрыта по умолчанию) -->
                <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 hidden transition-transform duration-300">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
            </button>

        </div>
    </div>

    <!-- 4. МОБИЛЬНОЕ МЕНЮ (ИСПРАВЛЕНО) -->
    <div 
        id="mobile-menu" 
        class="fixed inset-0 z-40 w-full h-screen flex flex-col items-center justify-start text-center -translate-y-full opacity-0 invisible transition-all duration-500 ease-in-out md:hidden"
        style="background-color: #1A1A1A;"
    >
        <!-- 
             МЫ ДОБАВИЛИ style="background-color: #1A1A1A;" 
             Это гарантирует черный непрозрачный фон.
        -->
        
        <nav class="flex flex-col gap-6 text-2xl font-heading font-bold text-white uppercase tracking-widest pt-32 w-full px-6">
            <a href="/" class="mobile-link hover:text-brand-yellow transition-colors py-3 border-b border-white/5 w-full block">Главная</a>
            <a href="/catalog" class="mobile-link hover:text-brand-yellow transition-colors py-3 border-b border-white/5 w-full block">Наш мёд</a>
            <a href="/about" class="mobile-link hover:text-brand-yellow transition-colors py-3 border-b border-white/5 w-full block">О нас</a>
            <a href="/delivery" class="mobile-link hover:text-brand-yellow transition-colors py-3 border-b border-white/5 w-full block">Доставка</a>
        </nav>

        <div class="mt-12 flex flex-col gap-4">
            <p class="text-gray-500 text-sm font-medium tracking-wide">Мы в соцсетях:</p>
            <div class="flex gap-8 justify-center">
                <!-- ССЫЛКИ НА СОЦСЕТИ -->
                <a href="https://instagram.com/marmol_honey" target="_blank" class="text-white hover:text-brand-yellow transition font-bold text-lg border border-white/10 px-6 py-2 rounded-lg bg-white/5">INST</a>
                <a href="https://t.me/marmol_admin" target="_blank" class="text-white hover:text-brand-yellow transition font-bold text-lg border border-white/10 px-6 py-2 rounded-lg bg-white/5">TG</a>
            </div>
        </div>

    </div>
</header>

<script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const iconMenu = document.getElementById('icon-menu');
    const iconClose = document.getElementById('icon-close');
    const body = document.body;
    const links = document.querySelectorAll('.mobile-link');

    let isMenuOpen = false;

    function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        
        if (isMenuOpen) {
            mobileMenu.classList.remove('-translate-y-full', 'opacity-0', 'invisible');
            mobileMenu.classList.add('translate-y-0', 'opacity-100', 'visible');
            body.style.overflow = 'hidden'; 
        } else {
            mobileMenu.classList.remove('translate-y-0', 'opacity-100', 'visible');
            mobileMenu.classList.add('-translate-y-full', 'opacity-0', 'invisible');
            body.style.overflow = '';
        }

        iconMenu.classList.toggle('hidden');
        iconClose.classList.toggle('hidden');
    }

    menuBtn.addEventListener('click', toggleMenu);

    links.forEach(link => {
        link.addEventListener('click', () => {
            if (isMenuOpen) toggleMenu();
        });
    });
</script>