---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro'; // <--- Новая Шапка
import Footer from '../components/Footer.astro'; // <--- Новый Футер
import CartFlyout from '../components/CartFlyout.jsx'; // Корзина (уже была)

interface Props {
	title: string;
    description?: string;
}

const { title, description = "Авторский мёд ручной работы Marmol" } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-brand-dark text-white min-h-screen flex flex-col">
        
        <!-- ШАПКА -->
        <Header />

        <!-- ОСНОВНОЙ КОНТЕНТ (Сдвигаем вниз на высоту шапки, чтобы не перекрывался) -->
        <main class="flex-grow"> 
            <slot /> 
        </main>

        <!-- ПОДВАЛ -->
        <Footer />

        <!-- ШТОРКА КОРЗИНЫ -->
        <CartFlyout client:only="react" />

	</body>
</html>