---
import Layout from '../layouts/Layout.astro';
import ProductGrid from '../components/ProductGrid.jsx';
import products from '../data/products.json';
---

<Layout title="Каталог | Marmol Honey">
    <section class="py-20 px-4 max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-6xl font-heading font-bold uppercase mb-4">
                Наш мёд
            </h1>
            <p class="text-gray-400 max-w-2xl mx-auto text-lg">
                Выбери свой вкус натурального десерта
            </p>
        </div>

        <!-- Подключаем умную сетку, передаем в неё данные -->
        <ProductGrid client:load products={products} />
    </section>
</Layout>